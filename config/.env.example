# ============================================================
# Polymarket BTC 15-Min Arbitrage Bot - Configuration
# ============================================================

# --- Polymarket Wallet & API ---
# Your Ethereum wallet private key (must be funded with USDC on Polygon)
POLYMARKET_PRIVATE_KEY=0x_your_private_key_here

# Signature type: 0 = EOA (standard wallet), 2 = GNOSIS_SAFE (Polymarket proxy wallet)
POLYMARKET_SIGNATURE_TYPE=2

# Your Polymarket proxy wallet address (required for GNOSIS_SAFE)
POLYMARKET_FUNDER=0x_your_proxy_wallet_here

# --- Strategy 1: Pure Arbitrage (buy both sides) ---
# Maximum combined UP+DOWN price to trigger pure arbitrage
TARGET_PAIR_COST=0.998
# Number of shares to buy per side
PURE_ARB_ORDER_SIZE=20

# --- Strategy 2: Temporal Arbitrage (exploit price lag) ---
TEMPORAL_ARB_ENABLED=true
TEMPORAL_ARB_ORDER_SIZE=20
# Minimum confidence level (0.0-1.0) to trigger a temporal arb trade
TEMPORAL_ARB_CONFIDENCE_THRESHOLD=0.50
# Maximum price to pay for the winning side (lower = safer but fewer trades)
TEMPORAL_ARB_PRICE_THRESHOLD=0.45

# --- CEX Price Feed (for temporal arbitrage) ---
BINANCE_ENABLED=true

# --- General Settings ---
# FOK = Fill or Kill (instant fill or cancel), GTC = Good Till Cancelled
ORDER_TYPE=FOK
# Start in simulation mode! Set to false for live trading.
DRY_RUN=true
# Minimum seconds between trades
COOLDOWN_SECONDS=2
# Use WebSocket for order book updates
USE_WSS=true
# Starting balance for simulation mode
SIM_BALANCE=1000

# --- Risk Management ---
# Maximum daily loss before halting ($)
MAX_DAILY_LOSS=500
# Maximum total position exposure ($)
MAX_POSITION_SIZE=5000
# Maximum single trade size ($)
MAX_SINGLE_BET=500
# Stop loss percentage
STOP_LOSS_PCT=5.0

# --- Telegram Notifications (Optional) ---
# Get a bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Get your chat ID from @userinfobot on Telegram
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=false

# --- Advanced ---
# Force SSL patch (only needed in sandboxed environments)
FORCE_SSL_PATCH=false
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
VERBOSE=false
